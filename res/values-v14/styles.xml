<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!-- API 14 theme customizations can go here. -->
    </style>

    
 <style name="AppTheme" parent="AppBaseTheme">
    <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:itemBackground">@color/midred</item>
    <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    <item name="android:windowBackground">@color/darkred</item>
 	<item name="android:editTextStyle">@style/LightEditText</item>
    <item name="android:alertDialogTheme">@style/LightDialog</item>
    <item name="android:dialogPreferenceStyle">@style/LightDialog</item>
   		<item name="android:textColorPrimary">@color/cardwhite</item>
		<item name="android:textColorSecondary">@color/cardwhite</item>
		<item name="android:textColorTertiary">@color/cardwhite</item>
	</style>

 <style name="LightEditText" parent="android:style/Widget.EditText">
    <item name="android:background">@color/black</item>
    <item name="android:editTextBackground">@color/darkred</item>
    <item name="android:textColor">@color/cardwhite</item>
</style>

<style name="LightDialog" parent="@android:style/Theme.Dialog">
    <item name="android:colorBackground">@color/darkred</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:textColorPrimary">@color/cardwhite</item>
		<item name="android:textColorSecondary">@color/cardwhite</item>
		<item name="android:textColorTertiary">@color/cardwhite</item>
    <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    <item name="android:divider">@color/cardwhite</item>
</style>
 
<style name="LightCheckBox" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:background">@color/darkred</item>
</style>

	<style name="RobotoTextViewStyle" parent="android:Widget.TextView">
    <item name="android:fontFamily">sans-serif-light</item>
     <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/cardwhite</item>
	</style>

	<style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">@color/cardwhite</item>
    	<item name="android:background">@color/darkred</item>
	</style>
    
	<style name="MyActionBar"
	    parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
	<item name="android:background">#A61700</item>
	<item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
	</style>
	
    
	<style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/cardwhite</item>
        <item name="android:fontFamily">sans-serif-light</item>
    	 <item name="android:textStyle">bold</item>
    </style>
	
	<style name="MyActionBarTabText"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/holobrightblue</item>
        <item name="android:fontFamily">sans-serif-light</item>

   	     <item name="android:textSize">14sp</item>
    </style>
	
	<style name="MyActionBarTabs"
           parent="@android:style/Widget.Holo.ActionBar.TabView">
    </style> 
    
 
	  
	
</resources>
